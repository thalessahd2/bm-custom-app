<?xml version="1.0" encoding="ISO-8859-1" ?>
<extensions xmlns="http://www.demandware.com/xml/bmmodules/2007-12-11"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.demandware.com/xml/bmmodules/2007-12-11 bmext.xsd">
    <menuitem id="my-menu-item" position="1999" site="true">
        <name xml:lang="x-default">Merchants custom menu item</name>
        <short_description xml:lang="x-default">Merchants custom menu item provides access to additional functionality.</short_description>
        <description xml:lang="x-default">Use the module to manage certain business data.</description>
        <icon>icons/my-icon.png</icon>
    </menuitem>

    <menuaction id="my-menu-action" menupath="my-menu-item" position="500" site="true">
        <name xml:lang="x-default">Merchants custom menu action</name>
        <short_description xml:lang="x-default">Tests for resource bundle in business manager.</short_description>
        <description xml:lang="x-default">Tests for resource bundle in business manager.</description>
        <exec pipeline="CustomBM" node="CustomFunction" />
        <sub-pipelines>
            <pipeline name="CustomBM-CustomFunction" />
        </sub-pipelines>
        <icon>icons/my-icon.png</icon>
    </menuaction>

    <menuaction id="filter-orders" menupath="my-menu-item" position="600" site="true">
        <name xml:lang="x-default">Filter orders</name>
        <short_description xml:lang="x-default">Filter orders.</short_description>
        <description xml:lang="x-default">Filter orders.</description>
        <exec pipeline="CustomBM" node="FilterOrders" />
        <sub-pipelines>
            <pipeline name="CustomBM-FilterOrders" />
        </sub-pipelines>
        <icon>icons/filtering.png</icon>
    </menuaction>
</extensions>

